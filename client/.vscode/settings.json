{
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveForeground": "#15202b99",
    "titleBar.activeBackground": "#928c6e",
    "titleBar.inactiveBackground": "#928c6e99",
    "activityBar.activeBackground": "#a8a38b",
    "activityBar.activeBorder": "#cfefea",
    "activityBar.background": "#a8a38b",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#cfefea",
    "activityBarBadge.foreground": "#15202b",
    "statusBar.background": "#928c6e",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#757058"
  },
  // These are all my auto-save configs
  "editor.formatOnSave": true,
  // turn it off for JS and JSX, we will do this via eslint
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  // tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "prettier.disableLanguages": [
    "javascript",
    "javascriptreact"
  ],
  "peacock.color": "#928c6e",
}